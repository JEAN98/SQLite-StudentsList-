<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jeancarlo.learn.Activity"
    tools:showIn="@layout/activity_"
    android:focusable="false"
    android:onClick="open_2">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="10dp"
        android:onClick="save"
        android:hint="10dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colegio"
        android:hint="School"
        android:layout_below="@+id/nombre"
        android:layout_alignParentStart="true"
        android:elevation="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seccion"
        android:hint="Class"
        android:layout_below="@+id/colegio"
        android:layout_alignParentStart="true"
        android:elevation="10dp"
        android:layout_alignEnd="@+id/colegio" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button"
        android:elevation="10dp"
        android:onClick="search"
        android:layout_below="@+id/save"
        android:layout_alignParentEnd="true"
        android:hint="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button2"
        android:elevation="10dp"
        android:onClick="update"
        android:textSize="12dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button3"
        android:elevation="10dp"
        android:onClick="delete"
        android:textSize="12dp"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre"
        android:hint="Name"
        android:elevation="10dp"
        android:layout_below="@+id/save"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cedu"
        android:inputType="number"
        android:hint="ID"
        android:elevation="10dp"
        android:layout_alignBaseline="@+id/save"
        android:layout_alignBottom="@+id/save"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button4"
        android:layout_alignEnd="@+id/colegio" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="#2196F3"
        android:text="View 2"
        android:layout_marginTop="110dp"

        android:onClick="open_2"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
